#!/usr/bin/bash

system_loc=~/Personal

if [ "${1}" = open ]; then
    nvim '+lcd %:p:h' ${system_loc}/Checklists/index.md
else
    checklist=$(find ${system_loc}/Checklists -maxdepth 1 -type f ! -name 'index.md' -name '*.md' -printf "%f\n" | fzf-tmux -r 30% --reverse)
    [ -n "${checklist}" ] && nvim '+lcd %:p:h' ${system_loc}/Checklists/${checklist}
fi
