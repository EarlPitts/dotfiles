#!/bin/sh

set -e

echo "deepscan.ds_store
    deepscan.backup
    deepscan.thumbs_db
    deepscan.tmp
    firefox.cache
    firefox.crash_reports
    firefox.vacuum
    slack.cache
    slack.vacuum
    system.desktop_entry
    system.cache
    system.clipboard
    system.trash
    system.tmp
    system.rotated_logs
    thumbnails.cache" | \
xargs bleachbit --clean
yay --sync --clean --noconfirm
