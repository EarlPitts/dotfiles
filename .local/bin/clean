#!/bin/sh

set -e

echo "deepscan.ds_store
    deepscan.backup
    deepscan.thumbs_db
    deepscan.tmp
    journald.clean
    firefox.cache
    firefox.crash_reports
    firefox.vacuum
    slack.cache
    slack.cookies
    slack.history
    slack.vacuum
    system.desktop_entry
    system.cache
    system.clipboard
    system.trash
    system.tmp
    system.rotated_logs
    thumbnails.cache
    x11.debug_logs" | \
xargs sudo bleachbit --clean
yay --sync --clean --noconfirm
