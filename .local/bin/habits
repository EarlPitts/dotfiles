#!/usr/bin/python

import json
from datetime import datetime

HABITS_FILE = '/home/obabo/Personal/Statistics/habits.json'
COMMITMENTS = '/home/obabo/Personal/Direction/Commitments.md'

def load(filename):
    """Loads the data from the JSON file."""
    try:
        with open(filename, 'r') as f:
            return json.loads(f.read())
    except FileNotFoundError:
        return {}


def write(data, filename):
    """Writes pretty printed, sorted output."""
    with open(filename, 'w') as f:
        f.write(json.dumps(data, indent=4, sort_keys=True))

def get_habits(filename):
    found = False
    habits = []

    with open(filename, 'r') as f:
        for line in f:
            if line == '### Habits\n':
                found = True
            elif found:
                if line[0] == '-':
                    habits.append(line.split('] ')[1].strip('\n'))
                elif line[0] == '#':
                    break
    return habits

def read_input(habit):
    """Reads user input."""
    usr_input = input(habit + ' (y/n): ')

    while usr_input != 'y' and usr_input != 'n':
        usr_input = input(habit + ' (y/n): ')
    if usr_input == 'y':
        return True
    else:
        return False


def add_record(data, habits):
    """Adds a single record to the "database"."""
    curr_date = datetime.now().strftime('%Y-%m-%d')

    for habit in habits:
        done = read_input(habit)
        if done:
            if data.get(habit, None):
                data[habit].append(curr_date)
            else:
                data[habit] = []
                data[habit].append(curr_date)


habits = get_habits(COMMITMENTS)
data = load(HABITS_FILE)
add_record(data, habits)
write(data, HABITS_FILE)
