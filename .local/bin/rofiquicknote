#!/usr/bin/sh

system_loc=~/Personal

if [ "$1" = open ]; then
    i3-sensible-terminal -t note -e zsh -ic "nvim '+lcd %:p:h' '+normal G' ${system_loc}/Inbox/index.md"
else
    note=$(rofi -dmenu -p "Note" -lines 0 -location 6)
    [ -n "$note" ] && echo "- $note" >> ${system_loc}/Inbox/index.md
fi
