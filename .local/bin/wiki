#!/usr/bin/bash

system_loc=~/Personal

if [ "${1}" = index ]; then
    nvim '+lcd %:p:h' '+Tagbar' ${system_loc}/Notes/index.md
elif [ -d wiki ]; then
    nvim '+lcd %:p:h' '+Tagbar' wiki/index.md
else
    note=$(find ${system_loc}/Notes -type f -name '*.md' -printf "%f\n" | fzf)
    [ -n "${note}" ] && nvim '+lcd %:p:h' '+Tagbar' ${system_loc}/Notes/${note}
fi
