{
    //### Workbench ###
    "workbench.iconTheme": "material-icon-theme",
    "workbench.statusBar.visible": true,
    "workbench.tips.enabled": false,
    "workbench.startupEditor": "newUntitledFile",
    "workbench.colorTheme": "Nord",

    //### Editor ###
    "editor.lineNumbers": "relative",
    "editor.fontSize": 11,
    "editor.minimap.enabled": false,
    "editor.fontLigatures": true,
    "editor.fontFamily": "'Fira Code'",
    "editor.wordWrap": "on",
    "editor.accessibilitySupport": "off",
    "editor.dragAndDrop": false,
    "editor.renderWhitespace": "none",
    "editor.emptySelectionClipboard": false,
    "editor.mouseWheelZoom": true,
    "editor.parameterHints.cycle": true,
    "editor.renderFinalNewline": false,
    "editor.renderLineHighlight": "all",
    "editor.smoothScrolling": true,
    "editor.acceptSuggestionOnEnter": "off",
    "editor.suggest.localityBonus": true,
    "editor.suggest.maxVisibleSuggestions": 10,

    //### Files ###
    "files.exclude": {
        "**/__pycache__": true,
        "**/.classpath": true,
        "**/.factorypath": true,
        "**/.project": true,
        "**/.settings": true,
        "**/.vscode": true,
        "**/*.class": true,
        "**/venv": true
    },
    "files.associations": {
        "*.deploy": "groovy",
        "*.ih": "cpp"
    },
    "files.enableTrash": false,
    "files.eol": "\n",
    "files.simpleDialog.enable": true,
    "files.autoSave": "onFocusChange",

    //### Window ###
    "window.menuBarVisibility": "hidden",
    "window.autoDetectHighContrast": false,
    "window.enableMenuBarMnemonics": false,
    "window.zoomLevel": 0,

    ///### Terminal ###
    "terminal.integrated.fontSize": 11,
    "terminal.integrated.splitCwd": "initial",
    "terminal.integrated.copyOnSelection": true,

    //### Misc ###
    "explorer.confirmDelete": false,
    "clock.dateFormat": "HH:MM",
    "git.autofetch": true,
    "explorer.confirmDragAndDrop": false,
    "java.errors.incompleteClasspath.severity": "ignore",
    "C_Cpp.updateChannel": "Insiders",
    "telemetry.enableTelemetry": false,
    "breadcrumbs.enabled": false,
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "openInApplication.applications": {
        "pdf": "zathura"
    },
    "pomodoro.workTime": 30,
    "vim.sneak": true,
    "vim.sneakUseIgnorecaseAndSmartcase": true,
    "terminal.integrated.commandsToSkipShell": [
        "workbench.action.toggleSidebarVisibility"
    ],
    "vsnotes.defaultNotePath": "~/Coding/notes",
    "vsnotes.noteTitleConvertSpaces": "-",
    "vsnotes.defaultNoteTitle": "inbox/{dt}_{title}.{ext}",
    "vsnotes.commitPushShellCommand": "./gen_summary.py && git add -A && git commit -m \"{msg}\" && git push",
    "vsnotes.treeviewHideTags": true,
    "diffEditor.ignoreTrimWhitespace": true,
    "files.autoGuessEncoding": true,
    "todo-tree.tree.showScanModeButton": false,
    "editor.fontWeight": "500",
    "todo-tree.highlights.defaultHighlight": {
        "background": "#ebcb8b",
        "foreground": "#eceff4",
        "opacity": "50",
        "fontWeight": "bold"
    },
    "latex-workshop.view.pdf.viewer": "tab"
}
